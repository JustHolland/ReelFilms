<%- include('./partials/header.ejs') %>
<div class="container-fluid">
  <div class="form">
    <form action="/movies/<%= movies.id %>?_method=PUT" method="POST">
       <div class="title">Edit</div>
       <div class="input-container ic1">
         <input id="title" class="input" type="text" name="title" value="<%= movies.title %>">
         <div class="cut"></div>
         <label for="title" class="placeholder">Title</label>
       </div>
       <div class="input-container ic2">
         <input id="description" class="input" type="text" name="description" value="<%= movies.description%>">
         <div class="cut"></div>
         <label for="description" class="placeholder">Description</label>
       </div>
       <div class="input-container ic2">
         <input id="img" class="input" type="text" name="img" value="<%=movies.img%>">
         <div class="cut cut-short"></div>
         <label for="img" class="placeholder">image URL</>
       </div>
       <div class="input-container ic2">
         <input id="tags" class="input" type="text" name="tags" value="<%=movies.tags%>">
         <div class="cut cut-short"></div>
         <label for="tags" class="placeholder">Add Tags</>
       </div>
       <div class="input-container ic2">
         <input id="userReviews" class="input" type="text" name="userReviews" placeholder=" " />
         <div class="cut"></div>
         <label for="userReviews" class="placeholder">Leave a Review</label>
       </div>

            <input class="submit" type="submit" value="Submit"/>
          </form>
     </div>
